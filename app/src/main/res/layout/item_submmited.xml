<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_5"
        android:paddingBottom="@dimen/padding_5"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task"
            android:textColor="@color/color_9b9b9b"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/tv_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space12"
            android:textSize="@dimen/font_16"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="end"
            android:text="TextView"
           />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_5"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:paddingTop="@dimen/padding_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/items"
            android:textColor="@color/color_9b9b9b"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/tv_task_affiliation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space12"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="TextView"
            android:textSize="@dimen/font_16" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_5"
        android:paddingBottom="@dimen/padding_5"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_9b9b9b"
            android:textSize="@dimen/font_16"
            android:text="@string/task_man_hours"
            />

        <TextView
            android:id="@+id/tv_task_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space12"
            android:textSize="@dimen/font_16"
            android:text="TextView"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_5"
        android:paddingBottom="@dimen/padding_5"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_9b9b9b"
            android:textSize="@dimen/font_16"
            android:text="@string/task_progress"
            />

        <TextView
            android:id="@+id/tv_task_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space12"
            android:text="TextView"
            android:textSize="@dimen/font_16" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_5"
        android:paddingBottom="@dimen/padding_5"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_16"
            android:textColor="@color/color_9b9b9b"
            android:text="@string/date"
            />

        <TextView
            android:id="@+id/tv_task_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space12"
            android:textSize="@dimen/font_16"
            android:text="TextView"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_5"
        android:paddingBottom="@dimen/padding_5"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_9b9b9b"
            android:textSize="@dimen/font_16"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="end"
            android:text="@string/remark"
            />

        <TextView
            android:id="@+id/tv_task_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space12"
            android:textSize="@dimen/font_16"
            android:text="TextView"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space4"
            android:visibility="visible"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:background="@drawable/selector_dialog_btn_ensure"
            android:text="修改"/>
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space4"
            android:visibility="visible"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:background="@drawable/selector_dialog_btn_ensure"
            android:text="删除"/>
        <TextView
            android:id="@+id/tv_details"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space4"
            android:layout_weight="1"
            android:textColor="@color/color_ffffff"
            android:gravity="center"
            android:background="@drawable/selector_dialog_btn_ensure"
            android:text="详情"/>
    </LinearLayout>
</LinearLayout>