<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#88000000"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <View
        android:id="@+id/v_status"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <com.giiso.dailysunshine.improve.widget.ProportionImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/update_group" />

                <ImageView
                    android:id="@+id/iv_break"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:layout_margin="@dimen/padding_10"
                    android:padding="@dimen/padding_10"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_clear" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_25">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/version_update"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/textfont20" />

                    <TextView
                        android:id="@+id/tv_version_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/version_update"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/textfont20" />
                </LinearLayout>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="25dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="5"
                    android:visibility="invisible"
                    android:text="1、修复******** \n2、修复******** \n3、修复********"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/textfont14" />

                <ScrollView
                    android:layout_alignTop="@+id/tv_title"
                    android:layout_alignBottom="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_update_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:lineSpacingExtra="4dp"
                            android:text="1、修复******** \n2、修复******** \n3、修复********"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/textfont14" />
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>

            <TextView
                android:id="@+id/btn_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="@drawable/selector_btn_cir_bg"
                android:paddingBottom="@dimen/padding_5"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:paddingTop="@dimen/padding_5"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/textfont15" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>