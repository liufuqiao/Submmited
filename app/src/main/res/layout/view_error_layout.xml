<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/img_error_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_no_data"
        tools:visibility="visible" />


    <com.giiso.submmited.ui.widget.Loading
        android:id="@+id/animProgress"
        android:layout_width="26dip"
        android:layout_height="26dip"
        app:gForegroundColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding_25"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/textfont16" />


    <TextView
        android:id="@+id/tv_error_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding_5"
        android:gravity="center"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/textfont13" />

    <TextView
        android:id="@+id/tv_error_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding_30"
        android:background="@drawable/selector_btn_cir_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_10"
        android:paddingLeft="@dimen/padding_45"
        android:paddingRight="@dimen/padding_45"
        android:paddingTop="@dimen/padding_10"
        android:text="@string/retry"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/textfont18" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />
</LinearLayout>